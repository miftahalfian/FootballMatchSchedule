<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="#"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:paddingEnd="@dimen/activity_small_margin"
                android:layout_marginStart="@dimen/activity_small_margin"
                android:id="@+id/no"/>

        <ImageView
                android:id="@+id/team_logo"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@android:color/darker_gray"/>
        <TextView
                android:text="@string/team_name"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingStart="@dimen/activity_small_margin"
                android:id="@+id/team_name"/>

        <TextView
                android:text="@string/default_point"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/played"/>

        <TextView
                android:text="@string/default_point"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/win"/>

        <TextView
                android:text="@string/default_point"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/draw"/>

        <TextView
                android:text="@string/default_point"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/loss"/>
        <TextView
                android:text="@string/default_point"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_small_margin"
                android:id="@+id/total"/>

    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginStart="@dimen/activity_small_margin"
            android:layout_marginEnd="@dimen/activity_small_margin"
            android:layout_marginTop="@dimen/activity_small_margin"
            android:layout_marginBottom="@dimen/activity_small_margin"/>
</LinearLayout>